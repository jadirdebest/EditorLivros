@model TesteEditoraLivros.Application.DTO.BookDTO

@{
    ViewData["Title"] = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Livro : @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Capa
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.UrlImage" width="100" height="150" />
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Editora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishingCompany)
        </dd>
        <dt class="col-sm-2">
          Autor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
           Sinopse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resume)
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBNCode)
        </dd>
        <dt class="col-sm-2">
            Data de Publicação
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationDate.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Books">Voltar</a>
</div>
